<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/theme"
    tools:context=".InGroup">

    <TextView
        android:id="@+id/idingrpname"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="152dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="115dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/idingrpname"

        android:text="Category:  "

        android:textSize="25dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/idcategoryview"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_alignTop="@+id/textView5"
        android:layout_toEndOf="@+id/textView5"
        android:text="TextView"
        android:textAllCaps="true"
        android:textSize="25dp"

        />

    <ListView
        android:id="@+id/idmemberlist"
        android:layout_width="match_parent"
        android:layout_height="328dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView7" />


    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="132dp"
        android:text="Tap on the Person you want to Settle Up with"
        android:textSize="18dp"

        />


    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gif2"
        android:layout_width="match_parent"
        android:layout_height="273dp"
        android:layout_alignParentStart="true"


        android:layout_below="@+id/textView5"
        android:src="@drawable/settledup"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/idsettledup"
        android:layout_width="354dp"
        android:layout_height="wrap_content"

        android:layout_below="@+id/gif2"
        android:layout_centerHorizontal="true"
        android:background="#fba5e0"
        android:text=" This Group is all Settled Up"
        android:textColor="#000"
        android:textSize="28dp"
        android:textStyle="bold|italic"
        android:visibility="invisible" />

    <Button
        android:id="@+id/idok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@+id/idmemberlist"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_theme"
        android:text="Done"

        android:textSize="20dp"
        android:visibility="invisible" />



</RelativeLayout>